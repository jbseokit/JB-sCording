    <select id="selectNoticeInfo" resultType="com.ieetu.study.domain.NoticeDto">
        <![CDATA[
            select * from tb_notice 
            order by nt_status desc, idx desc
            limit #{pageNum, jdbcType=INTEGER}, #{amount, jdbcType=INTEGER}
        ]]>
    </select>
    
    <select id="selectNoticeInfoOne" resultType="com.ieetu.study.domain.NoticeDto">
        select * from tb_notice where idx = #{idx}
    </select>
    
    <select id="selectTotalCount" resultType="Integer">
        select count(*) from tb_notice
    </select>
    
    <insert id="insertNoticeInfo">
        insert into tb_notice (nt_status, nt_title, nt_writer, nt_content, nt_reg_date)
        values (#{ntStatus}, #{ntTitle}, #{ntWriter}, #{ntContent}, #{ntRegDate})
    </insert>
    
</mapper>